@model OrderViewModel

@{
        ViewBag.Title = "Nova Encomenda";
}

<h1>Nova encomenda</h1>

<div class="row">
    @foreach (Product product in @Model.Products)
    {
        <div class="col-md-4">
            <form asp-action="AddItem" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="@Url.Content("~/images/" + product?.ImageUrl)" class="card-img-top fixed-image-height" alt="@product.Description">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <p class="card-text">Quantidade: @product.Stock</p>

                        
                        <input type="hidden" value="@product.ProductId" name="prodId" />
                        <input type="number" name="prodQty" class="form-control" />

                        <button class="btn btn-success" type="submit">Adicionar ao carrinho</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>