@model OrderViewModel
<h1>Carrinho</h1>

<!--Formulario para finalizar e criar a encomenda--> 
<form asp-action="PlaceOrder" method="post">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.OrderItems.Count; i++)
            {
                <tr>
                    <td>@Model.OrderItems[i].ProductName</td>
                    <td>@Model.OrderItems[i].Quantity</td>
                    <td>@Model.OrderItems[i].Price</td>
                    <td></td>
                </tr>
            }
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td class="bg-primary bg-gradient text-white fw-bold">@Model.TotalAmount.ToString("C")</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <input type="submit" value="Encomendar" class="btn btn-primary" />
    </div>
</form>