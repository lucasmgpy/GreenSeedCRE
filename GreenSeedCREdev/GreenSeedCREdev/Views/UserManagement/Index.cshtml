@model IEnumerable<GreenSeedCREdev.Models.ApplicationUser>
@using Microsoft.AspNetCore.Identity
@inject UserManager<GreenSeedCREdev.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome de utilizador</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var userRoles = await UserManager.GetRolesAsync(user);
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", userRoles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Editar</a>
                    @if (user.Id != UserManager.GetUserId(User))
                    {
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
